<section class="slider">
  <div class="home-slider">

    {{#each content.homeSlider as |item|}}
      {{> home-slider-item item=item}}
    {{/each}}
  </div>
  <div class="home-slider-controls">
    <div class="slider-controls">
      <button type="button" class="slide-button slide-m-prev">{{> svg/ar-left}}</button>
      <div class="slide-m-dots"></div>
      <button type="button" class="slide-button slide-m-next">{{> svg/ar-right}}</button>
    </div>
  </div>
</section>
<section class="section">
  <div class="container">
    <p class="section__title">Новинки</p>
    <div class="home-news">
       {{#each products as |product|}}
          {{> product-block product=product}}
      {{/each}}
    </div>
    <div class="home-news-controls">
      <div class="slider-controls">
        <button type="button" class="slide-button slide-m-prev">{{> svg/ar-left}}</button>
        <div class="slide-m-dots"></div>
        <button type="button" class="slide-button slide-m-next">{{> svg/ar-right}}</button>
      </div>
    </div>
  </div>
</section>
<section class="section sectons-cats">
