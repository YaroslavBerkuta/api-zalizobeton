<section class="section section-features">
  <div class="container">
    <div class="features">

      {{#each content.features as |item|}}
        <div class="features__item">
          <div class="features__icon">
            {{{ item.svg }}}
          </div>
          <div>
            <p class="title">{{item.name}}</p>
            <p class="subtitle">{{item.description}}</p>
          </div>
        </div>
      {{/each}}

       
    </div>
  </div>

</section>

<section class="section section-form">
  <div class="container">
   <form id="employer-form" class="hform">
     <div class="left">
      <p class="hform__title">Хочете стати гуртовим покупцем?</p>
      <p class="hform__description">Залиште контакти для подання заявки</p>
    </div>
    <div class="right">
      <div class="inputs">
        <input name="name" required type="text" class="form-controll" placeholder="Введіть ім’я">
        <input name="phoneNumber" required type="text" class="form-controll" placeholder="Введіть номер телефону">
      </div>
      <button class="btn hform__btn"><p>надіслати</p></button>
    </div>

   </form>
  </div>
</section>



<section class="section sectons-inst">
  <div class="container">
    <p class="section__title">Наш instagram</p>

    <div class="inst__row">
      {{#each instagramPosts as |post|}}
        <a href="{{post.permalink}}" target="_blank"><img src="{{post.media_url}}" alt="{{post.id}}"></a>
      {{/each}}
    </div>
  </div>
</section>

