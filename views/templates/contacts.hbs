<section class="section section-features auto-height-target section-contacts">
  <div class="container">
    <div class="features">
        
        {{#each content.contacts}}

            <div class="features__item">
                <div class="features__icon">
                    {{> svg/contacts}}
                </div>
                <div>
                    <p class="title">{{name}}</p>
                    <p class="subtitle">{{phoneNumbers}}</p>
                </div>
            </div>


        {{/each}}
    </div>
  </div>
</section>